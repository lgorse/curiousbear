        
    <script>

    function invite(friend_id, user_name){
      // assume we are already logged in
      FB.init({appId: '<%= Facebook::APP_ID.to_s %>', xfbml: true, cookie: true});

      FB.ui({
        to: friend_id,
          method: 'send',
          name: user_name+' invited you to join <%= APP_NAME %>',
          link: "http://www.bbc.co.uk",
          description: '<b><%= APP_NAME %> lets you choose the people whose food reviews you trust, and follow their advice to find the best places for you. </b>Join '+user_name+' on <%= APP_NAME %> and share your world with the people you trust.'
          });
    }
     </script>
