<li class="user_summary">
<div class = "user_summary_left">
<% if user.id.nil? %>
<%= user.name %>
<% else %>
<%= link_to user.name, user_path(user), :class => "user_name_link" %>
<p class = "user_review_count"><%= pluralize(user.reviews.count, "review") %></p>
<% end %>
</div>

<div class = "summary_right">
	<%= image_tag user.fb_pic, :class => 'user_small_pic' %>
<% if user.id.nil? %>	
	<div id="button_<%= user.id %>", class="follow_button">
		<%= render 'relationships/buttons/invite_button', :fb_id => user.fb_id %>
	</div>
<% else %>
	<% unless user == @current_user %>
	<div id="button_<%= user.id %>", class="follow_button">
		<% if @current_user.following?(user.id) %>
			<%= render 'relationships/buttons/unfollow_button', :followed_id => user.id, :current_user_id => @current_user.id, :user_id => @user.id %>
		<% else %>
			<%= render 'relationships/buttons/follow_button', :followed_id => user.id, :current_user_id => @current_user.id, :user_id => @user.id %>
		<% end %>
		</div>
	<% end %>
<% end %>
</div>
</li>