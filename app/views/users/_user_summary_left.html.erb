<div class = "user_summary_left">
	<ul>
		<li>
<% if user.id.nil? %>
<%= user.name %>
<% else %>
<%= link_to user.name, user_path(user), :class => "user_name_link", :id => user.id %>
</li>
<li>
<% unless user == @current_user || params[:action] == 'facebook_friends' %>
<%= render 'users/buttons/talk_to_user_button', :user => user, :text => "Let\'s talk" %>
<% end %>
</li>
<% end %>
</ul>
</div>