<ul><%= "trusts list" %>
<% @followed = @user.following.collect{|following| following} %>
<% @followed.each do |followed| %>
<li><%= image_tag followed.fb_pic %>
	<%= followed.name %>
	<%= link_to "unfollow", unfollow_user_path(followed),:id => "unfollow_button", :remote => true  %>
</li>
<% end %>
</ul>

