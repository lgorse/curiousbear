$(function(){
	var search_value;
	$(".fancybox").fancybox({
		type : 'iframe',
		afterLoad : function(){
			$(".fancybox-iframe").contents().find("#search_submit").unbind("type");
			set_click_listeners();
			$(".fancybox-iframe").contents().find("#search_submit").click(function(e){
		e.preventDefault();
		parent.$.fancybox.close();

	});
		},
		beforeClose : function(){
			search_value = $(".fancybox-iframe").contents().find('#search').val();
		},
		afterClose : function(){
			if (search_value){
			$("#search").attr("value", search_value);
			$("#search_form").submit();
		}
		}
	}).eq(0).click().stopPropagation();

});

function set_click_listeners(){
	$(".fancybox-iframe").contents().find(".info_header").click(function(){
		//alert("hello");
		$(this).next(".info_section").toggle();
		$('.fancybox-inner').height($(".fancybox-iframe").contents().find('body').height());
	});
}

