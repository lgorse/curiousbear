 <script> 
      FB.init({appId: '<%= Facebook::APP_ID.to_s %>', status: true, cookie: true});

      function reviewToFeed(user_name, restaurant_name, id, rating, text) {
        // calling the API ...
        var obj = {
          method: 'feed',
          link: "<%= Facebook::SITE_URL%>restaurants/"+id,
           picture: 'http://fb-logo-75.png',
          name: user_name+' gave '+restaurant_name+' '+rating+' stars',
          caption: text,
          description: 'Check out '+user_name+'\'s review of '+restaurant_name+' on <b><%= APP_NAME%></b>. Ask for details or give your 2 cents about this restaurant and help your friends by rating other restaurants you like.'
          
        };

        function callback(response) {
        		window.location = "<%= Facebook::SITE_URL%>restaurants/"+id;
        }

        FB.ui(obj, callback);
      }
    
    </script>