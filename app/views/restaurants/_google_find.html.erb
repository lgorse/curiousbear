<%= form_tag google_search_restaurants_path, :method => 'get', :remote => true, :class => 'search_form' do %>
<%= hidden_field_tag :local_search, params[:local_search] %>
<%= hidden_field_tag :search, params[:search], :size => 45%>
<%= hidden_field_tag :recommended_restaurants, @recommended_google_ids %>
<%= submit_tag "Search Google" %>
<%= image_tag "powered-by-google-on-white.png" %>
<% end %>