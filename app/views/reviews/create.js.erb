$(function(){
	if ( ($("#share_review").prop('checked')) && ("<%= @review.valid? %>" == "true") ){
		reviewToFeed("<%= URI.encode(@current_user.first_name) %>","<%= URI.encode(@restaurant.name) %>", "<%= @restaurant.id %>",
		 "<%= @review.rating %>");
	}else if ("<%= @review.valid? %>" == "false"){
		$("#container").html("<%= escape_javascript(render 'reviews/review_new') %>");
		$("#errors").html("<%= escape_javascript(render 'shared/error_messages', :object => @review) %>");
	}else{
		window.location = "/restaurants/<%= @restaurant.id %>";
	}
});