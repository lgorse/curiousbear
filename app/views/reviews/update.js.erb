$(function(){
	alert("hello");
	if ( ($("#share_review").prop('checked')) && ("<%= @review.valid? %>" == "true") ){
		reviewToFeed("<%= URI.encode(@current_user.first_name) %>","<%= URI.encode(@restaurant.name) %>",
		 "<%= @restaurant.id %>", "<%= @review.rating %>", "<%= URI.encode(@review.text) %>");
	}else if ("<%= @review.valid? %>" == "false"){
		$("#container").html("<%= escape_javascript(render 'reviews/review_edit') %>");
	}else{
		window.location = "/restaurants/<%= @restaurant.id %>";
	}
});
