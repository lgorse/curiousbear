<% if venue && review = Review.find_by_restaurant_id_and_user_id(venue.id, @current_user.id) %>
	<%= form_for review, :method => :put, :url => {:controller => :reviews, :action => :rate, :id => review},  :remote => true do |f| %>
		<%= f.label "Rating: " %>
		<%= f.select :rating, options_for_select((1..5), :include_blank => true, :selected => review.rating), {}, {:class => "rate_restaurant"} %>
	<% end %>
<% end %>