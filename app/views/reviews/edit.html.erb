<p><%= @restaurant.name %></p>

<%= form_for @review do |f|%>
<%= f.label "Rating" %>
<%= f.select :rating, (1..5).step(0.5) %>
<%= f.label "Review" %>
<%= f.text_area :text %></p>
<%= f.label "Key Words" %>
<%= f.text_field :keywords, :value => @review.keywords %>
<%= f.submit "Update your review" %>
<% end %>