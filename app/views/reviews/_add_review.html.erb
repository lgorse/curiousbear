<% if @restaurant && review = Review.find_by_restaurant_id_and_user_id(@restaurant.id, @current_user.id) %>
<%= button_to "Say more", {:controller => 'reviews', :action => 'edit', :id => review}, {:class => "review_detail_update", :method => :get} %>
	<% else %>
<%= form_tag reviews_new_path, :method => 'post', :class => "new_review_detail" do  %>
<%= hidden_field_tag :search_field, @encoded_search %>
<%= hidden_field_tag :venue_field, @encoded_venue %>
<%= submit_tag "Review" %>
	<% end %>
<% end %>