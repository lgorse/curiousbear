<div id = "header_wrapper">
<% if @current_user %>
<header id = "app_header">
	<div id="fb-root"></div>
	<%= render 'fb-scripts/facebook_app_scripts' %>
	<ul id= "app_header_left">
		<li class = 'app_header_item'><%= link_to (image_tag '/assets/logo.png', :id => 'logo'), home_path(:welcome => params[:welcome]) %></li>
		<li class = "app_header_item"><%= link_to APP_NAME, home_path(:welcome => params[:welcome]), :id=>"home_button" %></li>
	</ul>
	<nav id = "app_header_right">
		<%= link_to (image_tag @current_user.fb_pic, :id => "my_profile_button", :size => "30x30"), user_path(@current_user) %>
		<%= link_to (image_tag "ship-wheel.png", :id => "edit_profile_icon", :size => "40x40"), edit_user_path(@current_user) , :id => "my_account_button"%>
		<%= link_to (image_tag "logout.png", :size => "25x35", :id => "logout_icon"), '#', :id => "fb-logout", :onclick => "logout()" %>
	</nav>
	<%= render 'layouts/flash', :flash => flash %>
</header>
</div>
<% end %>