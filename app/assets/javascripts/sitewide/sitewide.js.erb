$(function() {
	$('.flash').fadeIn('normal', function() {
		$(this).delay(2000).animate({opacity: 0.0}, 500, 'linear');
	});

	feedback_fancybox();

});

function set_click_listeners(){
	$(".fancybox-iframe").contents().find(".info_header").click(function(){
		$(this).next(".info_section").toggle();
		$('.fancybox-inner').height($(".fancybox-iframe").contents().find('body').height());
	});
}

function block_off_default_clicks(){
	$(".fancybox-iframe").contents().find("#app_header").find('a').click(function(e){
		e.preventDefault();
	});
	$(".fancybox-iframe").contents().find(".new_review_detail").click(function(e){
		e.preventDefault();
	});
}

function feedback_fancybox(){
	$(".feedback_link").fancybox({
		type : 'iframe',
		autoResize : true,
		autoSize : true,
		helpers: {
			overlay: {locked: false}
		},
		afterLoad : function(){
			$(".fancybox-iframe").contents().find(".feedback_link").remove();
			$(".fancybox-iframe").contents().find("#feed").remove();
				$(".fancybox-iframe").contents().find("#app_header_right").remove();
			block_off_default_clicks();

			$(".fancybox-iframe").contents().find(".feedback_form").submit(function(e){
				parent.$.fancybox.close();
			});
		}
	});
}






