
function share_restaurant_detail(encoded_user_name, restaurant_attributes, has_rated, articles){
      // assume we are already logged in
      var venue = {"venue": restaurant_attributes};
      if (restaurant_attributes["id"]){
        run_facebook_button(encoded_user_name, restaurant_attributes["id"], encodeURI(restaurant_attributes["name"]), has_rated, articles);
      }else{
        $.ajax({
          type: 'POST',
          url: '<%= Facebook::SITE_URL %>restaurants/',
          data: venue,
          dataType: 'json'
        }).done(function(response){
         run_facebook_button(encoded_user_name, response["id"], response["name"], has_rated, articles)
       });
      }
    }

    function run_facebook_button(encoded_user_name, restaurant_id, encoded_restaurant_name, has_rated, articles){
     FB.init({appId: '<%= Facebook::APP_ID.to_s %>', xfbml: true, cookie: true});
     var user_name = decodeURI(encoded_user_name);
     var restaurant_name = decodeURI(encoded_restaurant_name);
    // alert(restaurant_id);
     if (has_rated){
       FB.ui({
        method: 'send',
        name: 'hello',
        link: '<%= Facebook::SITE_URL %>restaurants/'+restaurant_id,
        picture:"<%= Facebook::SITE_URL %>assets/fb-logo-75.png",
        description: unescape(user_name+' is using <%= APP_NAME %>, a site that lets you share and find reviews by the friends you trust.')
      });
     }else{
       FB.ui({
        method: 'send',
        name: user_name +' wants to talk about '+ restaurant_name,
        link: '<%= Facebook::SITE_URL %>restaurants/'+restaurant_id,
        picture:"<%= Facebook::SITE_URL %>assets/fb-logo-75.png",
        description: unescape(user_name+' has a question about '+ restaurant_name +'. Join '+ articles["object"] +
                              ' on <%= APP_NAME %>, a site that lets you share and find reviews by the friends you trust.')
      });
     }
   }

   function talk_to_user(encoded_self_name, encoded_user_name, self_id, user_id, user_fb_id, articles){
      // assume we are already logged in
      FB.init({appId: '<%= Facebook::APP_ID.to_s %>', xfbml: true, cookie: true});
      var self = decodeURI(encoded_self_name);
      var user_name = decodeURI(encoded_user_name);
      FB.ui({
        to: user_fb_id,
        method: 'send',
        name: 'Hey ' + user_name +', '+ self +' wants to talk to you',
        link: '<%= Facebook::SITE_URL %>users/'+self_id,
        picture:"<%= Facebook::SITE_URL %>assets/fb-logo-75.png",
        description: unescape(user_name+' is using <%= APP_NAME %>, a site that lets you share and find reviews by the friends you trust.')
      });
    }
